{
  "name": "babel-es6-es7-npm-skeleton",
  "version": "0.0.1",
  "description": "Babel NPM ES6 / ES7 Skeleton",
  "main": "./src/index.js",
  "babel": {
    "presets": [
      "es2015-node6",
      "stage-0",
      "babili"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "plugins": [
      "standard",
      "promise"
    ]
  },
  "scripts": {
    "start": "nodemon $2 --exec babel-node",
    "debug": "nodemon $2 --exec babel-node --debug",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "build": "babel -s true src -d dist",
    "serve": "node dist/index.js",
    "test": "mocha -w -G -R spec 'tests' --compilers js:babel-register",
    "report": "mocha -w -G -R mochawesome 'tests' --compilers js:babel-register"
  },
  "keywords": [
    "babel",
    "npm",
    "skeleton",
    "es6",
    "es7"
  ],
  "author": "Maik Ellerbrock <opensource@frapsoft.com> (https://github.com/ellerbrock)",
  "homepage": "https://github.com/ellerbrock/babel-es6-es7-npm-skeleton#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ellerbrock/babel-es6-es7-npm-skeleton.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-node-debug": "^2.0.0",
    "babel-preset-babili": "0.0.2",
    "babel-preset-es2015-node6": "^0.3.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "babili": "0.0.4",
    "chai": "^3.5.0",
    "eslint": "^3.5.0",
    "eslint-config-standard": "^6.0.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "mocha": "^3.0.2",
    "mochawesome": "^1.5.2",
    "nodemon": "^1.10.2"
  }
}
