{
  "name": "node-npm-boilerplate",
  "version": "0.3.0",
  "description": "Boilerplate for Node and npm Developer",
  "author": "Maik Ellerbrock",
  "main": "src/index.js",
  "license": "MIT",
  "repository": {
    "url": "git@github.com:ellerbrock/node-npm-boilerplate.git",
    "type": "git"
  },
  "homepage": "https://ellerbrock.github.io/node-npm-boilerplate",
  "bugs": {
    "url": "https://github.com/ellerbrock/node-npm-boilerplate/issues"
  },
  "scripts": {
    "benchmark": "babel-node benchmark",
    "benchmark:watch": "nodemon $2 --exec babel-node benchmark",
    "pre-build": "npm run clean",
    "build": "cross-env NODE_ENV=production babel -s true src -d dist",
    "clean": "shx rm -rf dist",
    "coverage": "cross-env NODE_ENV=test istanbul cover src/*.js _mocha --report lcovonly -- -R spec && codecov",
    "coverage:check": "cross-env NODE_ENV=test istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "coverage:travis": "cross-env NODE_ENV=test npm run coverage && codecov",
    "debug": "nodemon $2 --exec babel-node --debug",
    "git:add": "git add --all && git status",
    "git:commit": "npm run git:add && git-cz",
    "git:push": "git push --follow-tags",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "monitor": "nodejs-dashboard nodemon $2 --exec babel-node",
    "pre-release": "npm update && npm run clean && npm run lint:fix && npm run scan:security && npm run setenv:prod && npm run test && npm run build",
    "release": "standard-version",
    "post-release": "npm run setenv:dev",
    "scan:security": "snyk test",
    "scan:updates": "ncu",
    "serve": "node dist",
    "setenv:dev": "npm config set production false",
    "setenv:prod": "npm config set production true",
    "start": "nodemon $2 --exec babel-node",
    "test": "cross-env NODE_ENV=test mocha -c -S -R spec --compilers js:babel-register --check-leaks",
    "test:watch": "cross-env NODE_ENV=test npm test -- -w",
    "test:export": "cross-env NODE_ENV=test mocha -S -R mochawesome --compilers js:babel-register --reporter-options reportDir=reports --check-leaks"
  },
  "files": [
    "dist",
    "readme.md"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/standard-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run clean && npm run lint:fix && npm test && npm run coverage && npm run build"
    }
  },
  "babel": {
    "presets": [
      "es2015-node6",
      "stage-2"
    ],
    "env": {
      "production": {
        "presets": [
          "babili"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "standard",
    "installedESLint": true,
    "plugins": [
      "standard",
      "promise"
    ]
  },
  "snyk": true,
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-node-debug": "^2.0.0",
    "babel-plugin-istanbul": "2.0.3",
    "babel-preset-babili": "^0.0.5",
    "babel-preset-es2015-node6": "^0.3.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.18.0",
    "babili": "^0.0.7",
    "benchmark": "^2.1.1",
    "chai": "^3.5.0",
    "codecov": "1.0.1",
    "commitizen": "^2.8.6",
    "conventional-changelog-cli": "^1.2.0",
    "cross-env": "^3.1.3",
    "eslint": "^3.9.0",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.3.0",
    "eslint-plugin-standard": "2.0.1",
    "ghooks": "^1.3.2",
    "istanbul": "0.4.5",
    "mocha": "^3.1.2",
    "mochawesome": "^1.5.3",
    "nodejs-dashboard": "^0.1.2",
    "nodemon": "^1.11.0",
    "npm-check-updates": "2.8.6",
    "shx": "^0.1.4",
    "snyk": "^1.19.1",
    "standard-changelog": "^0.0.1",
    "standard-version": "^3.0.0"
  }
}
